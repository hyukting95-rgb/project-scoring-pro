{
  "name": "project-scoring-pro",
  "description": "Project Scoring Pro Application",
  "author": "User",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite & set VITE_DEV_SERVER_URL=http://localhost:3000 && electron .",
    "electron:build": "vite build && electron-builder",
    "electron:build:mac": "vite build && electron-builder --mac"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^33.2.1",
    "electron-builder": "^24.9.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sql.js": "^1.13.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.project.scoring.pro",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/sql.js/**"
    ],
    "directories": {
      "output": "release-app-v3"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": "dmg",
      "identity": null,
      "category": "public.app-category.productivity"
    }
  }
}
